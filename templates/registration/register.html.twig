{% extends 'base.html.twig' %}

{% block title %}{{'registerPage.title'|trans}}{% endblock %}

{% block body %}
<div class="m-5 px-5">
    <h2 class="importantInfo mb-4">{{'registerPage.title'|trans}}</h2>

    {{ form_start(registrationForm) }}

    <div class="mb-4 border-top pt-3">
        <h3>{{'registerPage.personnalInfos'|trans}}</h3>
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.firstName) }}
        {{ form_row(registrationForm.lastName) }}
        {{ form_row(registrationForm.plainPassword) }}
    </div>

    <div class="mb-4 border-top pt-3">
        <h3>{{'registerPage.addressInfos'|trans}}</h3>
        {{ form_row(registrationForm.address) }}
    </div>

    <div class="mb-4 border-top pt-3">
        <h3>{{'registerPage.conditions'|trans}}</h3>
        {{ form_row(registrationForm.agreeTerms) }}
    </div>

    <div class="mb-4">
        {{ form_row(registrationForm.save) }}
    </div>

    {{ form_end(registrationForm) }}
</div>
{% endblock %}
